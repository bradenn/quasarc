<!DOCTYPE html>
<html lang="en">
<%- include("partials/header"); %>

<body>
  <%- include("partials/nav"); %>
  <br>
  <div class="container">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a class="" data-toggle="tab" href="#post">Posts</a></li>
    </ol>
    <div class="row" style="margin-bottom: 16px;">
      <div class="col-md-8">
        <div class="tab-content">
          <div class="tab-pane fade active show" id="post">
            <%- include("partials/post"); %>
          </div>
          <div class="tab-pane fade" id="comments">
            <% if(post.length > 0){ %>
            <% for (var i = 0; i < post.length; i++) { %>
            <div class="row">
              <div class="col-md-12">
                <a href="/p/<%= post[i]._id %>" class="no-hover">
                  <div class="card bg-light">
                    <p class="card-title-span"><%= post[i].title %></p>
                    <div style="margin-left: 16px;">
                      <span class="card-sub-span">by <a href="/u/<%= post[i].user %>" class="card-sub-span"><%= post[i].user %></a></span>
                    </div>
                    <div class="card-body card-text-body-fade">
                      <p class="card-text card-text-fade"><%= post[i].post %></p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
            <br>
            <% } %>
            <% }else{ %>
            <div class="row">
              <div class="col-md-12">
                <div class="card bg-light">
                  <div class="card-body">
                    <p class="card-text " style="text-align:center;">The user r/<%= realm.name %> has no comments</p>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <div class="card bg-light">
              <p class="card-title-span">r/<%= realm.name %></p>
              <div style="margin-left: 16px;">
                <%= realm.bio %>
              </div>
              <br>
              <div class="card-footer">

              </div>
            </div>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</body>

</html>
