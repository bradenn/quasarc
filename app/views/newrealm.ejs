<!DOCTYPE html>
<html lang="en">
<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
<link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<%- include("partials/header") %>
<script type="application/x-javascript">
  addEventListener("load", function() {
    setTimeout(hideURLbar, 0);
  }, false);

  function hideURLbar() {
    window.scrollTo(0, 1);
  }
</script>
<style>
  body {
    font-family: 'IBM Plex Sans', sans-serif;
  }

  /* Set black background color, white text and some padding */
  footer {
    background-color: #555;
    color: white;
    padding: 15px;
  }
</style>

<%- include("partials/nav") %>

<body>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-8" style="margin-top:5%;">
        <div class="card bg-light">
          <div class="card-header">New Realm</div>
          <div class="card-body">

            <form id="post" action="/new/realm" method="post">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Name</label>
                    <input type="text" onchange="" class="form-control" id="name" name="name" placeholder="Name">
                  </div>
                </div>

              </div>

              <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" id="desc" name="desc" rows="2"></textarea>
              </div>

              <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Post">
              </div>
              <span class="text-danger"><% if(typeof error != "undefined") {  %> <%= error.message %> <% } %></span>

            </form>

          </div>
        </div>
      </div>
      <div class="col-md-2" style="margin-top:5%;"></div>
    </div>
  </div>

</body>
<script type="text/javascript">
  var quill = new Quill('#editor-container', {
    modules: {
      toolbar: [
        ['bold', 'italic'],
        ['link', 'blockquote'],
        [{
          list: 'ordered'
        }, {
          list: 'bullet'
        }]
      ]
    },
    placeholder: 'Write your post here',
    theme: 'snow'
  });
</script>

</html>
