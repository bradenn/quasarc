<!DOCTYPE html>
<html lang="en">
<%- include("partials/header"); %>

<body>
  <%- include("partials/nav"); %>
  <br>
  <div class="container">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#post">Posts</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#comments">Comments</a>
      </li>
    </ul>
    <br>
    <div class="row" style="margin-bottom: 16px;">
      <div class="col-md-8">
        <div class="tab-content">
          <div class="tab-pane fade active show" id="post">
            <% for (var i = 0; i < post.length; i++) { %>
            <div class="row">
              <div class="col-md-12">
                <a href="/p/<%= post[i]._id %>" class="no-hover">
                  <div class="card bg-light">
                    <p class="card-title-span"><%= post[i].title %></p>
                    <div style="margin-left: 16px;">
                      <span class="card-sub-span">by <a href="/u/<%= post[i].user %>" class="card-sub-span"><%= post[i].user %></a></span>
                    </div>
                    <div class="card-body card-text-body-fade">
                      <p class="card-text card-text-fade"><%= post[i].post %></p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
            <br>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <div class="card bg-light">
              <p class="card-title-span">u/<%= user.username %></p>
              <div style="margin-left: 16px;">
                <% if(user.bio == null){ %> No bio :( <% }else{ %><%= user.bio %><% } %><br>
                <a href="#" class="" id="bioEdit" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Edit Bio</a>

                <div class="dropdown-menu" aria-labelledby="bioEdit">
                  <form class="px-4" action="/profile/bio" method="post">
                    <div class="form-group">
                      <label for="body">Update bio:</label>
                      <textarea class="form-control" name="body" rows="3"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-sm" style="width:100%;">Save</button>
                  </form>
                </div>
              </div>
              <br>
              <div class="card-footer">
                <span>Badges:</span>
                <span style="font-size: 100%;"><%= user.badge.join("") %></span>
                <a href="#" class="float-right" id="btnGroupDrop1" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage Badges</a>

                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
                  <form class="px-4 py-3" action="/profile/badge" method="post">
                    <div class="form-check">
                      <label class="form-check-label">
                        <input class="form-check-input" name="usa" type="checkbox" value="true">
                        üá∫üá∏ American
                      </label>
                    </div>
                    <div class="form-check">
                      <label class="form-check-label">
                        <input class="form-check-input" name="pride" type="checkbox" value="true">
                        üè≥Ô∏è‚Äçüåà Pride
                      </label>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary btn-sm" style="width:100%;">Save</button>
                  </form>
                </div>



              </div>
            </div>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
</body>

</html>
