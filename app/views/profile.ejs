<!DOCTYPE html>
<html lang="en">
<%- include("partials/header"); %>

<body>
  <%- include("partials/nav"); %>
  <br>
  <div class="container">
    <ul class="breadcrumb nav nav-tabs">
      <li class="breadcrumb-item active"><a class="" aria-controls="post" role="tab" data-toggle="tab" href="#post">Posts</a></li>
      <li class="breadcrumb-item"><a class="" aria-controls="comments" role="tab" data-toggle="tab" href="#comments">Comments</a></li>
      <li class="breadcrumb-item"><a class="" aria-controls="friends" role="tab" data-toggle="tab" href="#friends">Friends</a></li>
    </ul>
    <div class="row" style="margin-bottom: 16px;">
      <div class="col-md-8">
        <div class="tab-content">
          <div class="tab-pane fade active show" id="post">
            <%- include("partials/post"); %>
          </div>
          <div class="tab-pane fade" id="comments">
            <% if(post.length > 0){ %>
            <% for (var i = 0; i < post.length; i++) { %>
            <div class="row">
              <div class="col-md-12">
                <a href="/p/<%= post[i]._id %>" class="no-hover">
                  <div class="card bg-light">
                    <p class="card-title-span"><%= post[i].title %></p>
                    <div style="margin-left: 16px;">
                      <span class="card-sub-span">by <a href="/u/<%= post[i].user %>" class="card-sub-span"><%= post[i].user %></a></span>
                    </div>
                    <div class="card-body card-text-body-fade">
                      <p class="card-text card-text-fade"><%= post[i].post %></p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
            <br>
            <% } %>
            <% }else{ %>
            <div class="row">
              <div class="col-md-12">
                <div class="card bg-light">
                  <div class="card-body">
                    <p class="card-text " style="text-align:center;">The user u/<%= user.username %> has no comments</p>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
          <div class="tab-pane fade" id="friends">
            <% if(typeof user.friends != "undefined"){ %>
            <% for (var i = 0; i < user.friends.length; i++) { %>
            <div class="row">
              <div class="col-md-12">

                <div class="card bg-light">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-8">
                        <p class="card-text " style=""><%= user.friends[i] %>
                        </p>
                      </div>
                      <div class="col-md-4">
                        <span class="float-right">
                          <a href="#chat" class="" style="color:#fff; margin-right: 0.75em;"><i class="fas fa-comment"></i></a>
                          <div class="dropdown d-inline-block">
                            <a href="#options" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:#fff;"><i class="fas fa-ellipsis-v"></i></a>
                            <div class="dropdown-menu">
                              <a class="dropdown-item" href="#">Block</a>
                              <a class="dropdown-item" href="#">Remove Friend</a>
                              <a class="dropdown-item" href="#">Report</a>
                            </div>
                          </div>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <br>
            <% } %>
            <% }else{ %>
            <div class="row">
              <div class="col-md-12">
                <div class="card bg-light">
                  <div class="card-body">
                    <p class="card-text " style="text-align:center;">The user u/<%= user.username %> has no friends</p>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <div class="card bg-light">
              <div class="row">
                <div class="col-md-3" style="margin:16px; margin-bottom:0px;">
                  <img src="data:image/png;base64,<%= user.picture.picture %>" style="width:100%; border-radius:50%;"></img>
                </div>
                <div class="col-md-9">

                </div>
              </div>



              <p class="card-title-span">u/<%= user.username %></p>
              <div style="margin-left:16px;">
                <%= user.bio %>
                <a href="#" class="" id="bioEdit" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Edit Bio</a>

                <div class="dropdown-menu" aria-labelledby="bioEdit">
                  <form class="px-4" action="/profile/bio" method="post">
                    <div class="form-group">
                      <label for="body">Update bio:</label>
                      <textarea class="form-control" name="body" rows="3"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-sm" style="width:100%;">Save</button>
                  </form>
                </div>
              </div>


            <br>
            <form action="/picture/upload" method="post" enctype="multipart/form-data">
              <input type="file" name="file" id="file">
              <button class="btn btn-primary" type="submit" name="submit"></button>
            </form>

            <div class="card-footer">
              <span style="font-size: 100%;"><%= user.badge.join(" ") %></span>

            </div>
          </div>
        </div><br>
      </div>
    </div>
    <br>
  </div>
  </div>
  </div>
</body>

</html>
